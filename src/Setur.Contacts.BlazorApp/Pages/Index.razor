@code {
    private bool _isFirstRender = true;

    protected override async Task OnInitializedAsync()
    {
        // SignalR baƒülantƒ±sƒ±nƒ± ba≈ülat
        await SignalRService.StartAsync();
        
        // SignalR ile rapor durumu g√ºncellemelerini dinle
        SignalRService.ReportStatusUpdated += OnReportStatusUpdated;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _isFirstRender = false;
        }
    }



    private void OnReportStatusUpdated(Guid reportId, ReportStatus status, string message)
    {
        if (!_isFirstRender)
        {
            _ = InvokeAsync(() =>
            {
                switch (status)
                {
                    case ReportStatus.Preparing:
                        ToastService.ShowInfo($"Rapor hazƒ±rlanƒ±yor... ID: {reportId}", "Rapor Durumu");
                        break;
                    case ReportStatus.Completed:
                        var successMessage = $"Raporunuz tamamlandƒ±! <a href='/reports/{reportId}' class='text-white text-decoration-underline fw-bold ms-1' style='color:cadetblue !important; text-decoration: underline !important; font-weight: bold !important;'>üìä Raporu g√∂r√ºnt√ºleyin</a>";
                        ToastService.ShowInfo(successMessage, "Rapor Tamamlandƒ±");
                        break;
                    case ReportStatus.Failed:
                        ToastService.ShowError($"Rapor ba≈üarƒ±sƒ±z: {message}", "Rapor Hatasƒ±");
                        break;
                }
                StateHasChanged();
                return Task.CompletedTask;
            });
        }
    }



    public async ValueTask DisposeAsync()
    {
        SignalRService.ReportStatusUpdated -= OnReportStatusUpdated;
        await SignalRService.DisposeAsync();
    }
}
