@page "/contacts/{ContactId:guid}"

@inject IContactService ContactService
@inject ICommunicationInfoService CommunicationInfoService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject IToastService ToastService

<PageTitle>Ki≈üi Detayƒ± - Setur Contacts</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-user me-2"></i>
                    Ki≈üi Detayƒ±
                </h2>
                <div>
                    <button class="btn btn-success me-2" @onclick="AddCommunication">
                        <i class="fas fa-plus me-2"></i>
                        ƒ∞leti≈üim Bilgisi Ekle
                    </button>
                    <button class="btn btn-warning me-2" @onclick="EditContact">
                        <i class="fas fa-edit me-2"></i>
                        D√ºzenle
                    </button>
                    <button class="btn btn-secondary" @onclick="GoToContacts">
                        <i class="fas fa-arrow-left me-2"></i>
                        Ki≈üi Listesi
                    </button>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Y√ºkleniyor...</span>
                    </div>
                    <p class="mt-2">Ki≈üi bilgileri y√ºkleniyor...</p>
                </div>
            }
            else if (contact != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-user me-2"></i>
                                    Ki≈üi Bilgileri
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Ad:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @contact.FirstName
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Soyad:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @contact.LastName
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>≈ûirket:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @contact.Company
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-address-book me-2"></i>
                                    ƒ∞leti≈üim Bilgileri
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (contact.CommunicationInfos?.Any() == true)
                                {
                                    <div class="list-group">
                                        @foreach (var comm in contact.CommunicationInfos)
                                        {
                                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <span class="me-2">@GetCommunicationTypeIcon(comm.Type)</span>
                                                    <span class="badge bg-primary me-2">@GetCommunicationTypeName(comm.Type)</span>
                                                    <span>@comm.Value</span>
                                                </div>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-warning" @onclick="() => EditCommunicationInfo(comm.Id)" title="D√ºzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveCommunicationInfo(comm.Id)" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center text-muted">
                                        <i class="fas fa-inbox fa-2x mb-3"></i>
                                        <p>Hen√ºz ileti≈üim bilgisi eklenmemi≈ü</p>
                                        <button class="btn btn-primary" @onclick="AddCommunication">
                                            <i class="fas fa-plus me-2"></i>
                                            ƒ∞lk ƒ∞leti≈üim Bilgisini Ekle
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <h5>Ki≈üi bulunamadƒ±!</h5>
                    <p>Aradƒ±ƒüƒ±nƒ±z ki≈üi sistemde mevcut deƒüil veya silinmi≈ü olabilir.</p>
                    <button class="btn btn-secondary" @onclick="GoToContacts">
                        <i class="fas fa-arrow-left me-2"></i>
                        Ki≈üi Listesine D√∂n
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid ContactId { get; set; }

    private ContactDetailResponse? contact;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadContact();
    }

    private async Task LoadContact()
    {
        isLoading = true;
        try
        {
            var result = await ContactService.GetContactByIdAsync(ContactId);
            if (result.Success && result.Data != null)
            {
                contact = result.Data;
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Ki≈üi y√ºklenirken hata olu≈ütu: {ex.Message}", "Hata");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RemoveCommunicationInfo(Guid communicationInfoId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Bu ileti≈üim bilgisini silmek istediƒüinizden emin misiniz?"))
        {
            try
            {
                var result = await CommunicationInfoService.DeleteCommunicationInfoAsync(communicationInfoId);
                if (result.Success)
                {
                    ToastService.ShowSuccess("ƒ∞leti≈üim bilgisi silindi!", "Ba≈üarƒ±lƒ±");
                    await LoadContact(); // Sayfayƒ± yenile
                }
                else
                {
                    ToastService.ShowError(result.Message, "Hata");
                }
            }
            catch (Exception ex)
            {
                ToastService.ShowError($"Hata olu≈ütu: {ex.Message}", "Hata");
            }
        }
    }

    private void AddCommunication()
    {
        Navigation.NavigateTo($"/contacts/{ContactId}/add-communication");
    }

    private void EditCommunicationInfo(Guid communicationInfoId)
    {
        Navigation.NavigateTo($"/contacts/{ContactId}/communication/{communicationInfoId}/edit");
    }

    private void EditContact()
    {
        Navigation.NavigateTo($"/contacts/{ContactId}/edit");
    }

    private void GoToContacts()
    {
        Navigation.NavigateTo("/contacts");
    }

    private string GetCommunicationTypeIcon(CommunicationType type)
    {
        return type switch
        {
            CommunicationType.Phone => "üìû",
            CommunicationType.Email => "üìß",
            CommunicationType.Location => "üìç",
            _ => "üìã"
        };
    }

    private string GetCommunicationTypeName(CommunicationType type)
    {
        return type switch
        {
            CommunicationType.Phone => "Telefon",
            CommunicationType.Email => "E-posta",
            CommunicationType.Location => "Lokasyon",
            _ => "Bilinmeyen"
        };
    }
}
